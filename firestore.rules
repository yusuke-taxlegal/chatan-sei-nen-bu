rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /profiles/{userId} {
      // 誰でもプロフィールを閲覧可能（仕様通り）
      allow read: if true;
      
      // 書き込み・更新・削除は本人のみ可能
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
